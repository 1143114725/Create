<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="@drawable/welcome_background" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >
         <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
        <TextView
                android:id="@+id/setting_landscape_tv"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:layout_gravity="center"
                android:text="@string/survey_ins"
                 android:textColor="#666666"
                android:textSize="@dimen/adpter_text_size" />
         <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
        
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/gray" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="7"
            android:gravity="center" >
            <ImageView
                android:id="@+id/iv_dap"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/icon_visit" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="9"
            android:gravity="center" >
            <Button
                android:id="@+id/btnVisit"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/white"
		        android:textSize="@dimen/index_detail"
		        android:text="@string/visit"
		        android:background="@drawable/icon_visit_start" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>