<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/upload_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/login_margin_top_big"
    android:paddingTop="@dimen/login_margin_top_big" >

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/rbSelect"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/icon_upload_normal" />


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/login_margin_top"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:gravity="left"
        android:text="公众体验问卷(20)"
        android:textColor="#4e4e4e"
        android:textSize="@dimen/local_text_size" />

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tvMsg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:text="个人研究使用免费连续追踪个人研究使用免费连续追踪个人研究使用免费连续追踪"
        android:textColor="#4e4e4e"
        android:textSize="@dimen/adpter_text_size" />

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/num_background"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="@dimen/adpter_text_size" />

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

</LinearLayout>